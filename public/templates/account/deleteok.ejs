<div class="typo wrapper-padding">
    <form id="deleteArtilces" action="" novalidate="true">
        Do u really want to delete the article?
        <input type="submit" value="Yes" class="btn">
    </form>
</div>

<script>
    $('#deleteArtilces').submit(function (e) {
        e.preventDefault();
        $.ajax({
                    url : '/api/v1{%=article%}'  ,
                type : 'DELETE'
    }).done(function (){
                routeHtml('/templ/index/page.ejs')
            })
            .fail(function (jqxhr){
                console.log(jqxhr)
            })
    })

</script>